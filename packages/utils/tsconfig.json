{
  "compilerOptions": {
    "target": "ESNext",
    "strict": true,
    "outDir": "dist/types",
    "skipLibCheck": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "emitDeclarationOnly": true
  },
  "include": ["./"],
  "exclude": ["../", "**/*.test.*", "**/tests/*", "types", "dist"]
}
